# ==============================================
# AGENDA INTELIGENTE - Backend Configuration
# ==============================================

# Server Configuration
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Database Configuration
# SQLite (Development/Small deployments)
DB_TYPE=sqlite
DB_PATH=./database.sqlite

# MongoDB (Production/Scalable deployments)
# DB_TYPE=mongodb
# MONGODB_URI=mongodb://localhost:27017/agenda-inteligente
# MONGODB_USER=admin
# MONGODB_PASSWORD=your_secure_password

# PostgreSQL (Production Database)
# DB_TYPE=postgresql
# DATABASE_URL=postgresql://user:password@localhost:5432/agenda_inteligente

# JWT Authentication
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
# Production: CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-change-this
SESSION_MAX_AGE=86400000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Redis Cache (Optional - for session storage)
REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password

# Payment Gateway (Future integration)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# SaaS Multi-tenancy
ENABLE_MULTI_TENANCY=true
DEFAULT_PLAN=free

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security
BCRYPT_ROUNDS=10
ENABLE_HTTPS=false
HELMET_ENABLED=true

# Monitoring
SENTRY_DSN=

# OAuth
GOOGLE_CLIENT_ID=

# WhatsApp Integration (Essencial+)
WHATSAPP_PROVIDER=twilio
WHATSAPP_API_KEY=
WHATSAPP_PHONE_NUMBER=

# Pix Integration (Premium)
PIX_PROVIDER=gerencianet
PIX_API_KEY=
PIX_STATIC_KEY=your-pix-key-here

# AWS S3 (Optional - for file storage)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=your-bucket-name
# AWS_REGION=us-east-1

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_VERIFICATION=false
